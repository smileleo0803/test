/*
1.看存款帳戶是否含外幣
2.105比名單資料存放處
3.看專家團隊table長相*/

--105筆名單Base
select base.*
    ,case when ac.customer_id is not null then 1 else 0 end as open_ac /*台外幣開戶*/
    ,sum(zeroifnull(r.asset_bal)) aum /*AUM餘額*/
    ,sum(zeroifnull(lum.SME_CB_loan_bal)+zeroifnull(SME_RB_loan_bal))  SME_loan_current_bal  /*SB Loan餘額*/
    ,case when cr.customer_id is not null then 1 else 0 end as cr_done  /*完成Call Report填寫*/
from  as base    /*名單*/
left join 
(select *
  from temp_analysisdev.party_SME_segment_M
 where snapshot_Yr_mth/100-10000=2001
  and (	( business_line_code<>'2'  or  business_line_code is NULL)
			 or (business_line_code='2' and channel_code is not NULL))
 ) sme
/*SB Loan餘額*/
left join 
(select customer_id
,bal LUM
,lcl_bal SME_CB_loan_bal
,lsl05_bal SME_RB_loan_bal
from temp_bps.party_sme_lum
where  snapshot_Yr_mth/100-10000=2001
and lcl_ind+lsl05_ind>0
) lum
on base.sme_id=lum.customer_id
/*AUM餘額*/
left join 
(select customer_id,asset_bal,isSecurity_DP
from   temp_bps.wm_assetsclass_2001
where isgeneral_pb+issalary_dp+iskb+istd+ispb_xb+istd_xb+isov_xb+issd_xb+isdcd+isrp
            +ismf+ispsa+ispga+ispvin+isTrust+ishk_pb+ishk_td+ishk_dcd+ishk_mf+isgd
			+ispna+ispfir+isSecurity_DP>0
)  R
on base.sme_id=r.customer_id
/*台外幣開戶*/
left join (select distinct customer_id from vp_bns_mcif.bns_customer
            union 
            select distinct customer_id from vc_bns_mcif.bns_customer) as ac
on base.comp_id = ac.customer_id
/*外幣餘額:外幣活存*/
/*IPAD約訪專家(串專家團隊陪訪)*/
left join
(
select a.FA_Event_Nbr
        , max(case when c.team='FP' then c.employee_name else '' end) as "FP"
        , max(case when c.team='PA' then c.employee_name else '' end) as "PA"
        , max(case when c.team='IP' then c.employee_name else '' end) as "IP"
        , max(case when c.team='IS' then c.employee_name else '' end) as "IS"
        , max(case when c.team='FPI稅' then c.employee_name else '' end) as "FPI-稅"
        , max(case when c.team='FPI不' then c.employee_name else '' end) as "FPI-地"
        , max(case when c.team='FPI信' then c.employee_name else '' end) as "FPI-信"
    --專家陪訪行程報表檔-
from
(
select FA_Event_Nbr
     , Expert_Employee_Nbr
from vr_bns_mcif.INWM_EXPERT_EVENT
where FA_visit_start_date/100=12001  --改
    and cancel_code is null --1是已刪除  其他都空值 故取Null
    and approval_code=1 --主管審核狀態 1.已通過
group by 1,2
) as a
)
on 
/*完成Call Report填寫*/
left join (select unique customer_id
from VP_MF_MCIF.FPS_VISIT_RECORD
where VISIT_DATE between 1191206 and 1200207) as cr
on 
