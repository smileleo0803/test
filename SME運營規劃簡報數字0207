    and Bad_Law not in (1) --重大訴訟案(鄧白氏)
    and Bad_Yr not in (1)  --開業年資未滿一年
    and under_300W not in (1) --營收300萬
    and Bad_TBRG not in (1) --SMEO風險評等TBRG<=5
	and substr(ind_type,1,1) in ('N','H','Q','F','C')
